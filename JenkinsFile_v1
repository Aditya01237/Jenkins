pipeline {
    agent any

    stages {
        stage('Build Code') {
            steps {
                sh 'chmod +x Prog1.py'
                sh './Prog1.py'
            }
        }

        stage('Test Code') {
            steps {
                sh 'chmod +x Test.py'
                sh './Test.py'
            }
        }

        stage('Hello World') {
            steps {
                sh 'chmod +x HelloWorld.py'
                sh './HelloWorld.py'
            }
        }
    }
}
